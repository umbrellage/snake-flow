<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juliet.development.item.center.dao.ItemPriceDao">


    <resultMap id="BaseResultMap" type="com.juliet.flow.domain.entity.ItemPriceEntity">
        <id column="id" property="id" />
        <result column="del_flag" property="delFlag" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="rep_time" property="repTime" />
        <result column="tenant_id" property="tenantId" />
        <result column="item_id" property="itemId" />
        <result column="price" property="price" />
        <result column="price_type" property="priceType" />
        <result column="ext" property="ext" />
    </resultMap>

    <sql id="fieldList">id, tenant_id, item_id, price, price_type, ext, del_flag, create_time, update_time, create_by, update_by, rep_time</sql>
    <sql id="tableName">product_item_price</sql>
    <select id="selectByItemId" resultMap="BaseResultMap">
        select <include refid="fieldList" />
        from <include refid="tableName" />
        where item_id = #{itemId}
    </select>

    <select id="selectByItemIds" resultMap="BaseResultMap">
        select <include refid="fieldList" />
        from <include refid="tableName" />
        where item_id in
        <foreach item="itemId" collection="itemIds" separator="," open="(" close=")" index="">
            #{itemId, jdbcType=NUMERIC}
        </foreach>
    </select>

    <insert id="insertBatch"  parameterType="com.juliet.flow.domain.entity.ItemPriceEntity">
        INSERT INTO <include refid="tableName" /> (
        tenant_id, item_id, price, price_type, ext, create_by, update_by
        )
        values
        <foreach collection="itemPriceEntities" item="entity" separator=",">
            (#{entity.tenantId}, #{entity.itemId}, #{entity.price},#{entity.priceType},#{entity.ext},#{entity.createBy},#{entity.updateBy})
        </foreach>
    </insert>


</mapper>